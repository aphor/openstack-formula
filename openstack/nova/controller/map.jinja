                              'nova-consoleauth', 'nova-novncproxy',
                              'nova-scheduler', 'python-novaclient', ],
                'services': [ 'nova-api', 'nova-cert', 'nova-consoleauth',
                              'nova-scheduler', 'nova-conductor',
                              'nova-novncproxy', ], },
